<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // 선택된 아이템을 확인하고 처리
    if (isset($_POST['selected_items'])) {
        $selectedItems = $_POST['selected_items'];

        // 여기에서 선택된 아이템을 사용하여 원하는 작업을 수행할 수 있습니다.
        // 예를 들면, 데이터베이스에 저장하거나 다른 서비스로 전송하는 등의 작업이 가능합니다.

        // 선택된 아이템 출력 (테스트용)
        echo "선택된 아이템: ";
        foreach ($selectedItems as $item) {
            echo $item . " ";
        }
    } else {
        echo "선택된 아이템이 없습니다.";
    }
}
?>